{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>go-vela/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "update all non-major dependencies",
      "groupSlug": "all-minor-patch-digest-pin",
      "automerge": true
    },
  ],
}
